version: "3.9"

services:
  backend:
    build:
      context: .
      dockerfile: deploy/Dockerfile.backend
    env_file: .env
    volumes:
      - ./output:/output
    expose:
      - "8000"

  frontend:
    build:
      context: src/plugins/gittxt_web/frontend
      dockerfile: Dockerfile.dev
    env_file: .env.local
    volumes:
      - ./src/plugins/gittxt_web/frontend:/app
    ports:
      - "5173:5173"
    command: ["npm", "run", "dev", "--", "--host"]
    depends_on:
      - backend

  nginx:
    image: nginx:1.25-alpine
    volumes:
      - ./deploy/nginx-compose.conf:/etc/nginx/conf.d/default.conf:ro
    ports:
      - "80:80"
    depends_on:
      - backend
      - frontend
